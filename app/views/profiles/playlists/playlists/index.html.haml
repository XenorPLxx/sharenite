%h1 Playlists
%p This is experimental and not completed yet
%p= link_to "New", new_profile_playlist_path
%br/
%h2 Listing playlists
%ul.list-group.list-group-flush
  %li.list-group-item{id: "header"}
    .row
      .col-3.col-sm-4.col-md-6
        %strong
          NAME
      .col-3
        %strong
          GAMES
  - @playlists.each do |playlist|
    %li.list-group-item
      .row
        .col-3.col-sm-4.col-md-6
          = playlist.name
        .col-3.col-sm-2.col-md-3
          = playlist.playlist_items.count
        .col-2.col-sm-2.col-md-1
          = link_to 'Show', profile_playlist_path(@profile, playlist), {class: "btn btn-link p-0"}
        .col-2.col-sm-1.col-md-1
          = link_to 'Edit', edit_profile_playlist_path(@profile, playlist), {class: "btn btn-link p-0"}
        .col-2.col-sm-1.col-md-1
          = button_to "Delete", profile_playlist_path(@profile, playlist), {class: "btn btn-link p-0", method: :delete, data: {turbo_confirm: "Are you sure?"}}
%br/
